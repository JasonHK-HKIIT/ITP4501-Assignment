<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        android:title="@string/preferences_category_appearance_title"
        app:iconSpaceReserved="false"
        android:fontFamily="@font/montserrat">

        <ListPreference
            android:key="@string/preference_language"
            android:title="@string/preference_language_title"
            app:iconSpaceReserved="false" />

        <ListPreference
            android:key="@string/preference_theme"
            android:title="@string/preference_theme_title"
            app:iconSpaceReserved="false"
            app:useSimpleSummaryProvider="true" />

        <SwitchPreferenceCompat
            android:key="@string/preference_dynamic_color"
            android:summary="@string/preference_dynamic_color_summary"
            android:title="@string/preference_dynamic_color_title"
            app:iconSpaceReserved="false" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/preferences_category_records_title"
        app:iconSpaceReserved="false">

        <Preference
            android:key="@string/preference_clear_records"
            android:summary="@string/preference_clear_records_summary"
            android:title="@string/preference_clear_records_title"
            app:iconSpaceReserved="false" />

    </PreferenceCategory>

</PreferenceScreen>
